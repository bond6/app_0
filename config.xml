<?xml version='1.2' encoding='utf-8'?>
<widget android-versionCode="10028" id="io.nardus.ica_citrus_mrl" version="1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon density="mdpi" height="57" platform="android" src="img/logo.png" width="57"/>
    <name>Citrus MRL</name>
    <description>
        ICA citrus post-harvest fungicide choices for different export markets.
    </description>
    <author email="serfonteinnardus@gmail.com">
        Nardus Serfontein
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios" version='1.2' ios-CFBundleVersion="1.0.1">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <icon src="images/Icon-App-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="images/Icon-App-60x60@2x.png" width="60" height="60" />
        <icon src="images/Icon-App-60x60@3x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="images/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="images/Icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="images/Icon-App-40x40@2x.png" width="40" height="40" />
        <icon src="images/Icon-App-40x40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="images/Icon-App-29x29@1x.png" width="57" height="57" />
        <icon src="images/Icon-App-29x29@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="images/Icon-App-29x29@1x.png" width="72" height="72" />
        <icon src="images/Icon-App-29x29@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="images/Icon-App-40x40@2x.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="images/Icon-App-20x20@2x.png" width="29" height="29" />
        <icon src="images/Icon-App-20x20@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="images/Icon-App-40x40@2x.png" width="50" height="50" />
        <icon src="images/Icon-App-40x40@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="images/Icon-App-40x40@2x.png" width="167" height="167" />
        
        
    </platform>
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
</widget>
